@model Ders
@{
	ViewData["Title"] = "Dersi Düzenle";
}

<h1>Öğrenci Düzenleme İşlemi</h1>

<form asp-action="DersiDuzenle" asp-controller="Ders" class="container" method="post">
	<label class="form-label" asp-for="Dersad">Dersin Adı</label>
	<input class="form-control" asp-for="Dersad" required />
	<label class="form-label" asp-for="Kredi">Dersin Kredisi</label>
	<input class="form-control" asp-for="Kredi" required />
	<input asp-for="Dersid" type="hidden" />
	<button class="btn btn-primary container-fluid mt-1" type="submit">Kaydet</button>
</form>
