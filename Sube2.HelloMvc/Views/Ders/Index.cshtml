@model IEnumerable<Ders>
@{
	ViewData["Title"] = "Index";
}

<h1>Ders İşlemleri</h1>
<a asp-action="DersEkle" asp-controller="Ders" class="btn btn-outline-primary">Ders Ekle</a>
<table class="table">
	<thead>
		<tr>
			<th>Dersin Adı</th>
			<th>Dersin Kredisi</th>
			<th>Ders İşlemleri</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Dersad</td>
				<td>@item.Kredi</td>
				<td><a class="btn btn-sm btn-outline-success" href="/Ders/DersiDuzenle/@item.Dersid">Düzenle</a> <a onclick="return confirm('Emin misiniz?')" class="btn btn-sm btn-outline-danger" href="/Ders/DersiSil/@item.Dersid">Sil</a></td>
			</tr>
		}
	</tbody>
</table>