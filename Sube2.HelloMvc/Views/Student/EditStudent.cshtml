@model Ogrenci
@{
	ViewData["Title"] = "EditStudent";
}

<h1>Öğrenci Düzenleme İşlemi</h1>

<form asp-action="EditStudent" asp-controller="Student" class="container" method="post">
	<label class="form-label" asp-for="Ad"></label>
	<input class="form-control" asp-for="Ad" />
	<label class="form-label" asp-for="Soyad">Soyad</label>
	<input class="form-control" asp-for="Soyad" />
	<label class="form-label" asp-for="Numara">Numara</label>
	<input class="form-control" asp-for="Numara" />
	<input asp-for="Ogrenciid" type="hidden" />
	<button class="btn btn-primary container-fluid mt-1" type="submit">Düzenle</button>
</form>


